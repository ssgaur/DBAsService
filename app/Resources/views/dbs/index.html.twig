{% extends 'base.html.twig' %}
{% block body %}
          <div class="row top-buffer  border-1x">
                        <table class="table table-striped"> 
                            <thead> 
                              <tr> 
                                <th>#</th> 
                                <th>Table Name</th> 
                                <th>Action</th> 
                              </tr> 
                            </thead> 
                            <tbody> 
                              {% for table in tables %}
                                  <tr> 
                                    <td> {{ loop.index }} </td> 
                                    <td>{{ table }}</td> 
                                    <td>
                                      <a href="/dbs/browseTable/{{table}}" class="btn btn-success btn-xs">Browse</a>
                                      <a href="/dbs/insertTable/{{table}}" class="btn btn-primary btn-xs">Insert</a>
                                      <a href="/dbs/edittable/{{table}}" class="btn btn-danger btn-xs">Alter</a>
                                      <a href="/dbs/deleteTable/{{table}}" class="btn btn-danger btn-xs">Drop</a>
                                    </td> 
                                  </tr> 
                              {% endfor %}
                                  <tr>
                                      <td></td>
                                      <td></td>
                                      <td><a href="/dbs/newTable" class="btn btn-primary btn-sm">Create New Table </a></td>
                                  </tr> 
                            </tbody> 
                        </table>
                    </div>

{% endblock %}